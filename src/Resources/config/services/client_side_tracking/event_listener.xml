<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_analytics.event_listener.tag_subscriber"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\TagSubscriber" abstract="true">
            <argument type="service" id="setono_tag_bag.tag_bag"/>
            <argument type="service" id="setono_sylius_analytics.context.property"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="security.firewall.map"/>
        </service>
        <service id="setono_sylius_analytics.event_listener.analytics"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\AddLibrarySubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.add_payment_info"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\AddPaymentInfoSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.add_to_cart"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\AddToCartSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.login"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\LoginSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.sign_up"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\SignUpSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.view_item"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\ViewItemSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.begin_checkout"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\BeginCheckoutSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_listener.purchase"
                 class="Setono\SyliusAnalyticsPlugin\EventListener\ClientSideTracking\PurchaseSubscriber"
                 parent="setono_sylius_analytics.event_listener.tag_subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
