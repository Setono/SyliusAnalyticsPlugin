<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_analytics.event_subscriber.add_payment_info"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\AddPaymentInfoSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="setono_sylius_analytics.resolver.items"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.add_shipping_info"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\AddShippingInfoSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="setono_sylius_analytics.resolver.items"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.add_to_cart"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\AddToCartSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="sylius.context.cart"/>
            <argument type="service" id="setono_sylius_analytics.resolver.item"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.begin_checkout"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\BeginCheckoutSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="sylius.context.cart"/>
            <argument type="service" id="setono_sylius_analytics.resolver.items"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.purchase"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\PurchaseSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="setono_sylius_analytics.resolver.items"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.view_cart"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\ViewCartSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="sylius.context.cart"/>
            <argument type="service" id="setono_sylius_analytics.resolver.items"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.view_item_list"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\ViewItemListSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="setono_sylius_analytics.resolver.item"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sylius.repository.taxon"/>
            <argument type="service" id="sylius.context.locale"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_analytics.event_subscriber.view_item"
                 class="Setono\SyliusAnalyticsPlugin\EventSubscriber\ViewItemSubscriber">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="setono_sylius_analytics.resolver.item"/>
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
